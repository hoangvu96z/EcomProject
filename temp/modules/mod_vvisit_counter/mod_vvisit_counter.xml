	<params>
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
		</param>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="today" type="text" default="Today" label="Today" description="You could translate to your language"/>	
		<param name="yesterday" type="text" default="Yesterday" label="Yesterday" description="You could translate to your language"/>	
		<param name="week" type="text" default="This week" label="This week" description="You could translate to your language"/>		
		<param name="month" type="text" default="This month" label="This month" description="You could translate to your language"/>	
		<param name="all" type="text" default="All" label="All days" description="You could translate to your language"/>		
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="locktime" type="text" default="15" label="Locktime" description="Session Lifetime. Default value: 15 minutes"/>	
		<param name="initialvalue" type="text" default="1" label="Initital Value" description="Initital Value. Default value: 1 visitor"/>
		<param name="records" type="text" default="100000" label="Records" description="Number of records which you want to archive. Default value: 100 000. Recommend less than 1.000.000"/>
		
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="s_today" type="radio" default="1" label="Show Today" description="Show Today Visitors">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="s_yesterday" type="radio" default="1" label="Show Yesterday" description="Show Yesterday Visitors">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> 
		<param name="s_week" type="radio" default="1" label="Show Week" description="Show Week Visitors">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> 
		<param name="s_month" type="radio" default="1" label="Show Month" description="Show Month Visitors">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param> 
		<param name="s_all" type="radio" default="1" label="Show All" description="Show All Visitors">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="s_digit" type="radio" default="1" label="Show Digit Counter" description="Show Digit Counter">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="disp_type" type="list" default="a" label="Display type" description="Select the type of display">
			<option value="mechanical">Mechanical</option>
			<option value="nixie">Nixie</option>
			<option value="blue">Blue</option>
			<option value="slot">Slot</option>
			<option value="boxes">Boxes</option>
			<option value="italic">Italic</option>
		</param>		
		<param name="widthtable" type="list" default="90" label="Width Table" description="The width (%) of statistics table">
			<option value="100">100%</option>
			<option value="95">95%</option>
			<option value="90">90%</option>
			<option value="85">85%</option>
			<option value="80">80%</option>
			<option value="75">75%</option>
			<option value="70">70%</option>
			<option value="65">65%</option>
			<option value="60">60%</option>
			<option value="55">55%</option>
			<option value="50">50%</option>
		</param>
